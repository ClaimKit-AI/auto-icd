# ICD Suggest & Specifier Tray - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Port for the backend API server
PORT=3000

# Environment (development, production, test)
NODE_ENV=development

# =============================================================================
# DATABASE CONNECTION
# =============================================================================
# Supabase PostgreSQL connection string
# Get this from your Supabase project settings
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME

# =============================================================================
# AI EMBEDDINGS (OPTIONAL)
# =============================================================================
# OpenAI API key for generating embeddings
# Leave empty to disable AI features
OPENAI_API_KEY=

# Which embedding model to use
EMBEDDING_MODEL=text-embedding-3-large

# Dimension size for embeddings (1536 for text-embedding-3-large)
EMBED_DIM=1536

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable AI vector search
USE_VECTOR=true

# Maximum number of suggestions to return
MAX_SUGGESTIONS=8

# Debounce delay for frontend input (milliseconds)
DEBOUNCE_MS=80

# =============================================================================
# CACHING
# =============================================================================
# Cache size for hot queries (number of entries)
CACHE_SIZE=2000

# Cache TTL in milliseconds (5 minutes)
CACHE_TTL=300000

# =============================================================================
# LOGGING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

